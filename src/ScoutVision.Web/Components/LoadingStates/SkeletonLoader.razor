@namespace ScoutVision.Web.Components

<div class="skeleton-container">
    @switch (Type)
    {
        case SkeletonType.PlayerCard:
            <div class="skeleton-player-card">
                <div class="skeleton-avatar"></div>
                <div class="skeleton-content">
                    <div class="skeleton-line skeleton-title"></div>
                    <div class="skeleton-line skeleton-subtitle"></div>
                    <div class="skeleton-line skeleton-stats"></div>
                </div>
            </div>
            break;
        case SkeletonType.Chart:
            <div class="skeleton-chart">
                <div class="skeleton-chart-bars">
                    @for (int i = 0; i < 6; i++)
                    {
                        <div class="skeleton-bar" style="height: @(Random.Shared.Next(30, 80))%"></div>
                    }
                </div>
            </div>
            break;
        case SkeletonType.Table:
            @for (int i = 0; i < Rows; i++)
            {
                <div class="skeleton-table-row">
                    @for (int j = 0; j < Columns; j++)
                    {
                        <div class="skeleton-cell"></div>
                    }
                </div>
            }
            break;
    }
</div>

<style>
    .skeleton-container {
        animation: pulse 1.5s ease-in-out infinite;
    }
    
    .skeleton-line, .skeleton-avatar, .skeleton-cell, .skeleton-bar {
        background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
        background-size: 200% 100%;
        animation: loading 1.5s infinite;
        border-radius: 4px;
    }
    
    .skeleton-player-card {
        display: flex;
        padding: 16px;
        gap: 12px;
    }
    
    .skeleton-avatar {
        width: 48px;
        height: 48px;
        border-radius: 50%;
    }
    
    .skeleton-title { height: 20px; width: 60%; margin-bottom: 8px; }
    .skeleton-subtitle { height: 16px; width: 40%; margin-bottom: 8px; }
    .skeleton-stats { height: 14px; width: 80%; }
    
    @keyframes loading {
        0% { background-position: 200% 0; }
        100% { background-position: -200% 0; }
    }
</style>

@code {
    [Parameter] public SkeletonType Type { get; set; } = SkeletonType.PlayerCard;
    [Parameter] public int Rows { get; set; } = 5;
    [Parameter] public int Columns { get; set; } = 4;
}

public enum SkeletonType
{
    PlayerCard,
    Chart,
    Table,
    Dashboard
}